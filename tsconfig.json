{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["es2017"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
